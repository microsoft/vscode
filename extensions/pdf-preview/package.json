{
  "name": "pdf-preview",
  "displayName": "%displayName%",
  "description": "%description%",
  "extensionKind": [
    "ui",
    "workspace"
  ],
  "version": "1.0.0",
  "publisher": "vscode",
  "license": "MIT",
  "engines": {
    "vscode": "^1.70.0"
  },
  "main": "./out/extension",
  "browser": "./dist/browser/extension.js",
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:pdfPreview.showPdf",
    "onCommand:markdownPreview.showMarkdown",
    "onCommand:markdown.showPreviewToSide",
    "onLanguage:markdown"
  ],
  "capabilities": {
    "virtualWorkspaces": true,
    "untrustedWorkspaces": {
      "supported": true
    }
  },
  "contributes": {
    "customEditors": [
      {
        "viewType": "pdfPreview.editor",
        "displayName": "%customEditor.pdfPreview.displayName%",
        "priority": "builtin",
        "selector": [
          {
            "filenamePattern": "*.pdf"
          }
        ]
      },
      {
        "viewType": "markdownPreview.editor",
        "displayName": "%customEditor.markdownPreview.displayName%",
        "priority": "option",
        "selector": [
          {
            "filenamePattern": "*.md"
          },
          {
            "filenamePattern": "*.markdown"
          }
        ]
      }
    ],
    "commands": [
      {
        "command": "pdfPreview.zoomIn",
        "title": "%command.zoomIn%",
        "category": "PDF Preview"
      },
      {
        "command": "pdfPreview.zoomOut",
        "title": "%command.zoomOut%",
        "category": "PDF Preview"
      },
      {
        "command": "pdfPreview.goToPage",
        "title": "%command.goToPage%",
        "category": "PDF Preview"
      },
      {
        "command": "pdfPreview.fitWidth",
        "title": "%command.fitWidth%",
        "category": "PDF Preview"
      },
      {
        "command": "pdfPreview.fitPage",
        "title": "%command.fitPage%",
        "category": "PDF Preview"
      },
      {
        "command": "pdfPreview.download",
        "title": "%command.download%",
        "category": "PDF Preview",
        "icon": "$(cloud-download)"
      },
      {
        "command": "pdfPreview.rotateClockwise",
        "title": "%command.rotateClockwise%",
        "category": "PDF Preview"
      },
      {
        "command": "pdfPreview.rotateCounterClockwise",
        "title": "%command.rotateCounterClockwise%",
        "category": "PDF Preview"
      },
      {
        "command": "pdfPreview.showPdf",
        "title": "%command.showPdf%",
        "category": "PDF Preview"
      },
      {
        "command": "pdfPreview.find",
        "title": "%command.find%",
        "category": "PDF Preview"
      },
      {
        "command": "markdownPreview.showMarkdown",
        "title": "%command.showMarkdown%",
        "category": "Markdown Preview"
      },
      {
        "command": "markdownPreview.zoomIn",
        "title": "%command.zoomIn%",
        "category": "Markdown Preview"
      },
      {
        "command": "markdownPreview.zoomOut",
        "title": "%command.zoomOut%",
        "category": "Markdown Preview"
      },
      {
        "command": "markdownPreview.find",
        "title": "%command.find%",
        "category": "Markdown Preview"
      },
      {
        "command": "markdownPreview.exportPdf",
        "title": "%command.exportPdf%",
        "category": "Markdown Preview",
        "icon": "$(file-pdf)"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "pdfPreview.zoomIn",
          "when": "activeCustomEditorId == 'pdfPreview.editor'"
        },
        {
          "command": "pdfPreview.zoomOut",
          "when": "activeCustomEditorId == 'pdfPreview.editor'"
        },
        {
          "command": "pdfPreview.goToPage",
          "when": "activeCustomEditorId == 'pdfPreview.editor'"
        },
        {
          "command": "pdfPreview.fitWidth",
          "when": "activeCustomEditorId == 'pdfPreview.editor'"
        },
        {
          "command": "pdfPreview.fitPage",
          "when": "activeCustomEditorId == 'pdfPreview.editor'"
        },
        {
          "command": "pdfPreview.download",
          "when": "activeCustomEditorId == 'pdfPreview.editor'"
        },
        {
          "command": "pdfPreview.rotateClockwise",
          "when": "activeCustomEditorId == 'pdfPreview.editor'"
        },
        {
          "command": "pdfPreview.rotateCounterClockwise",
          "when": "activeCustomEditorId == 'pdfPreview.editor'"
        },
        {
          "command": "pdfPreview.showPdf",
          "when": "false"
        },
        {
          "command": "markdownPreview.showMarkdown",
          "when": "false"
        },
        {
          "command": "markdownPreview.zoomIn",
          "when": "activeCustomEditorId == 'markdownPreview.editor'"
        },
        {
          "command": "markdownPreview.zoomOut",
          "when": "activeCustomEditorId == 'markdownPreview.editor'"
        },
        {
          "command": "markdownPreview.find",
          "when": "activeCustomEditorId == 'markdownPreview.editor'"
        },
        {
          "command": "markdownPreview.exportPdf",
          "when": "activeCustomEditorId == 'markdownPreview.editor'"
        },
        {
          "command": "pdfPreview.find",
          "when": "activeCustomEditorId == 'pdfPreview.editor'"
        }
      ]
    },
    "keybindings": [
      {
        "command": "pdfPreview.zoomIn",
        "key": "ctrl+=",
        "mac": "cmd+=",
        "when": "activeCustomEditorId == 'pdfPreview.editor'"
      },
      {
        "command": "pdfPreview.zoomOut",
        "key": "ctrl+-",
        "mac": "cmd+-",
        "when": "activeCustomEditorId == 'pdfPreview.editor'"
      },
      {
        "command": "pdfPreview.find",
        "key": "ctrl+f",
        "mac": "cmd+f",
        "when": "activeCustomEditorId == 'pdfPreview.editor'"
      },
      {
        "command": "markdownPreview.zoomIn",
        "key": "ctrl+=",
        "mac": "cmd+=",
        "when": "activeCustomEditorId == 'markdownPreview.editor'"
      },
      {
        "command": "markdownPreview.zoomOut",
        "key": "ctrl+-",
        "mac": "cmd+-",
        "when": "activeCustomEditorId == 'markdownPreview.editor'"
      },
      {
        "command": "markdownPreview.find",
        "key": "ctrl+f",
        "mac": "cmd+f",
        "when": "activeCustomEditorId == 'markdownPreview.editor'"
      }
    ]
  },
  "scripts": {
    "compile": "npx tsc -p .",
    "watch": "npx tsc -p . --watch",
    "compile-web": "npx webpack-cli --config extension-browser.webpack.config.js --mode none",
    "watch-web": "npx webpack-cli --config extension-browser.webpack.config.js --mode none --watch"
  },
  "devDependencies": {
    "@types/node": "22.x"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/microsoft/vscode.git"
  }
}
