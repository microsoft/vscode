{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./out",
    "esModuleInterop": true,
    "sourceMap": true,
    "target": "ES2021",
    "lib": ["ES2021", "DOM"],
    "jsx": "react",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "core": ["./packages/core/src"],
      "core-node": ["./packages/core-node/src"],
      "core-browser": ["./packages/core-browser/src"],
      "editor-core": ["./packages/editor-core/src"],
      "editor-server": ["./packages/editor-server/src"],
      "editor-types": ["./packages/editor-types/src"],
      "quarto-core": ["./packages/quarto-core/src"]
    },
    "types": [
      "node",
      "mocha"
    ],
    "typeRoots": [
      "./packages/editor-server/src/@types",
      "./lsp/src/@types",
      "./node_modules/@types",
      "../../node_modules/@types"
    ]
  },
  "include": [
    "src/**/*",
    "packages/**/*",
    "lsp/src/**/*",
    "../../src/vscode-dts/vscode.d.ts"
  ],
  "exclude": [
    "apps/**/*",
    "node_modules/**/*",
    "out/**/*",
    "test/**/*",
    "packages/build/**/*"
  ]
}
