{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./out",
    "esModuleInterop": true,
    "sourceMap": true,
    "target": "ES2021",
    "lib": ["ES2021", "DOM"],
    "jsx": "react",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": [
      "node",
      "mocha"
    ],
    "typeRoots": ["./packages/editor-server/src/@types", "./lsp/src/@types", "./node_modules/@types"]
  },
  "include": [
    "src/**/*",
    "packages/**/*",
    "lsp/src/**/*"
  ],
  "exclude": [
    "apps/**/*",
    "node_modules/**/*",
    "out/**/*",
    "test/**/*",
  ]
}
