{
	"compilerOptions": {
		"module": "commonjs",
		"target": "ES2020",
		"outDir": "out",
		"esModuleInterop": true,
		"lib": [
			"ES2020"
		],
		"sourceMap": true,
		"rootDir": "src",
		"strict": true,
		"skipLibCheck": true,
		"paths": {
			"*": ["./node_modules/*"],
			"vscode": ["../../src/vscode-dts/vscode.d.ts"]
		}
	},
	"include": [
		"src/**/*",
		"../../src/vscode-dts/vscode.d.ts",
		"../../src/erdos-dts/erdos.d.ts"
	],
	"exclude": [
		"node_modules",
		".vscode-test"
	]
}
