{
	"name": "rich-editor",
	"displayName": "Rich Text Editor",
	"description": "WYSIWYG editor for Markdown and Typst files",
	"version": "1.0.0",
	"publisher": "dspace",
	"license": "MIT",
	"engines": {
		"vscode": "^1.85.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onLanguage:markdown",
		"onLanguage:typst"
	],
	"main": "./out/extension.js",
	"browser": "./dist/browser/extension.js",
	"contributes": {
		"customEditors": [
			{
				"viewType": "dspace.richEditor.markdown",
				"displayName": "Rich Editor (Markdown)",
				"priority": "option",
				"selector": [
					{
						"filenamePattern": "*.md"
					}
				]
			},
			{
				"viewType": "dspace.richEditor.typst",
				"displayName": "Rich Editor (Typst)",
				"priority": "option",
				"selector": [
					{
						"filenamePattern": "*.typ"
					}
				]
			}
		],
		"commands": [
			{
				"command": "richEditor.openMarkdown",
				"title": "Open Rich Editor",
				"category": "Rich Editor",
				"icon": "$(edit)"
			},
			{
				"command": "richEditor.openTypst",
				"title": "Open Rich Editor",
				"category": "Rich Editor",
				"icon": "$(edit)"
			}
		],
		"menus": {
			"editor/title": [
				{
					"command": "richEditor.openMarkdown",
					"when": "resourceLangId == markdown",
					"group": "navigation"
				},
				{
					"command": "richEditor.openTypst",
					"when": "resourceLangId == typst",
					"group": "navigation"
				}
			],
			"explorer/context": [
				{
					"command": "richEditor.openMarkdown",
					"when": "resourceLangId == markdown",
					"group": "navigation"
				},
				{
					"command": "richEditor.openTypst",
					"when": "resourceLangId == typst",
					"group": "navigation"
				}
			]
		},
		"keybindings": [
			{
				"command": "richEditor.openMarkdown",
				"key": "ctrl+shift+alt+e",
				"mac": "cmd+shift+alt+e",
				"when": "editorLangId == markdown"
			},
			{
				"command": "richEditor.openTypst",
				"key": "ctrl+shift+alt+e",
				"mac": "cmd+shift+alt+e",
				"when": "editorLangId == typst"
			}
		]
	},
	"scripts": {
		"build-editor": "node ./esbuild-editor.mjs",
		"compile": "npx tsc -p . && npm run build-editor",
		"watch": "npx tsc -p . --watch",
		"compile-web": "npm run build-editor && npx webpack-cli --config extension-browser.webpack.config.js --mode none",
		"watch-web": "npx webpack-cli --config extension-browser.webpack.config.js --mode none --watch"
	},
	"devDependencies": {
		"@types/node": "^25.0.2",
		"@types/vscode": "^1.107.0",
		"esbuild": "^0.19.12",
		"typescript": "^5.3.0"
	},
	"dependencies": {
		"@tiptap/core": "^2.1.0",
		"@tiptap/extension-image": "^2.1.0",
		"@tiptap/extension-link": "^2.1.0",
		"@tiptap/extension-placeholder": "^2.1.0",
		"@tiptap/pm": "^2.1.0",
		"@tiptap/starter-kit": "^2.1.0"
	}
}
