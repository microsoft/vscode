{
	"compilerOptions": {
		"target": "ES2020",
		"lib": [
			"ES2020",
			"DOM"
		],
		"module": "commonjs",
		"outDir": "./out",
		"rootDir": "./src",
		"strict": false,
		"esModuleInterop": true,
		"useDefineForClassFields": false,
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"noLib": false,
		"forceConsistentCasingInFileNames": true,
		"allowJs": true,
		"types": [
			"node"
		]
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules/**/*",
		".vscode-test",
		"**/node_modules/**"
	]
}
