{
	"compilerOptions": {
		"module": "commonjs",
		"target": "ES2022",
		"outDir": "out",
		"lib": ["ES2022", "DOM"],
		"sourceMap": true,
		"rootDir": "src",
		"strict": true,
		"typeRoots": ["./node_modules/@types"],
		"types": ["node", "mocha"],
		"paths": {
			"erdos": ["../../src/erdos-dts/erdos.d.ts"],
			"vscode": ["../../src/vscode-dts/vscode.d.ts"]
		},
		"esModuleInterop": true,
		"useUnknownInCatchVariables": false,
		"noImplicitAny": false
	},
	"include": [
		"src/**/*",
		"../../src/vscode-dts/vscode.d.ts",
		"../../src/erdos-dts/erdos.d.ts"
	]
}
