{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"lib": [
			"es6",
			"es2015.promise"
		],
		"outDir": "./out",
		"strictNullChecks": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true
	},
	"include": [
		"src/**/*"
	]
}