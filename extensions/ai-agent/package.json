{
  "name": "code-ship-ai-agent",
  "displayName": "Code Ship AI Agent",
  "description": "AI Agent core extension for Code Ship IDE",
  "version": "0.1.0",
  "publisher": "code-ship",
  "license": "MIT",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "enabledApiProposals": [
    "codeShipAIAgent"
  ],
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "codeShip",
          "title": "Code Ship",
          "icon": "$(rocket)",
          "order": 0
        }
      ]
    },
    "views": {
      "codeShip": [
        {
          "id": "codeShip.chatView",
          "name": "Chat",
          "type": "webview",
          "visibility": "visible",
          "when": "!config.chat.disableAIFeatures"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "codeShip.chatView",
        "contents": "Welcome to Code Ship AI Agent!\n\nStart your AI-assisted development workflow.\n\n[Open Chat](command:codeShip.focusChat)",
        "when": "codeShip.noMessages && !config.chat.disableAIFeatures"
      }
    ],
    "commands": [
      {
        "command": "codeShip.helloWorld",
        "title": "Code Ship: Hello World",
        "enablement": "!config.chat.disableAIFeatures"
      },
      {
        "command": "codeShip.testIntercept",
        "title": "Code Ship: Test Command Interception",
        "enablement": "!config.chat.disableAIFeatures"
      },
      {
        "command": "codeShip.showChatView",
        "title": "Code Ship: Show Chat View",
        "icon": "$(comment-discussion)",
        "enablement": "!config.chat.disableAIFeatures"
      },
      {
        "command": "codeShip.openChat",
        "title": "Code Ship: Open Chat",
        "enablement": "!config.chat.disableAIFeatures"
      },
      {
        "command": "codeShip.sendMessage",
        "title": "Code Ship: Send Message",
        "enablement": "!config.chat.disableAIFeatures"
      },
      {
        "command": "codeShip.switchPhase",
        "title": "Code Ship: Switch Phase",
        "enablement": "!config.chat.disableAIFeatures"
      },
      {
        "command": "codeShip.cancel",
        "title": "Code Ship: Cancel",
        "enablement": "!config.chat.disableAIFeatures"
      },
      {
        "command": "codeShip.clearHistory",
        "title": "Clear Chat History",
        "enablement": "!config.chat.disableAIFeatures"
      },
      {
        "command": "codeShip.showHistory",
        "title": "Code Ship: Show History",
        "icon": "$(history)",
        "enablement": "!config.chat.disableAIFeatures"
      },
      {
        "command": "codeShip.newChat",
        "title": "Code Ship: New Chat",
        "icon": "$(add)",
        "enablement": "!config.chat.disableAIFeatures"
      },
      {
        "command": "codeShip.checkDependencies",
        "title": "Code Ship: Check Dependencies",
        "enablement": "!config.chat.disableAIFeatures"
      },
      {
        "command": "codeShip.focusChat",
        "title": "Code Ship: Focus Chat",
        "enablement": "!config.chat.disableAIFeatures"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "codeShip.showHistory",
          "when": "view == codeShip.chatView && !config.chat.disableAIFeatures",
          "group": "navigation@1"
        },
        {
          "command": "codeShip.newChat",
          "when": "view == codeShip.chatView && !config.chat.disableAIFeatures",
          "group": "navigation@2"
        },
        {
          "command": "codeShip.clearHistory",
          "when": "view == codeShip.chatView && !config.chat.disableAIFeatures",
          "group": "2_clear"
        }
      ]
    }
  },
  "scripts": {
    "compile": "node esbuild.config.js",
    "watch": "node esbuild.config.js --watch",
    "lint": "eslint src --ext ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.96.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vitest/coverage-v8": "^4.0.16",
    "esbuild": "^0.19.0",
    "eslint": "^8.54.0",
    "typescript": "^5.3.0",
    "vitest": "^4.0.16"
  }
}
