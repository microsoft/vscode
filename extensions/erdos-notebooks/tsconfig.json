{
	"compilerOptions": {
		"module": "commonjs",
		"target": "ES2021",
		"outDir": "out",
		"lib": ["ES2021", "DOM"],
		"sourceMap": true,
		"rootDir": "src",
		"strict": true,
		"typeRoots": ["./node_modules/@types"],
		"paths": {
			"vscode": ["../../src/vscode-dts/vscode.d.ts"]
		},
		"esModuleInterop": true,
		"useUnknownInCatchVariables": false,
		"noImplicitAny": false
	},
	"include": [
		"src/**/*",
		"../../src/vscode-dts/vscode.d.ts"
	]
}
