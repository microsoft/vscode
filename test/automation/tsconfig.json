{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es2024",
		"strict": true,
		"noUnusedParameters": false,
		"noUnusedLocals": true,
		"outDir": "out",
		"sourceMap": true,
		"declaration": true,
		"skipLibCheck": true,
		"lib": [
			"esnext",
			"dom"
		],
		"typeRoots": [
			"./node_modules/@types"
		],
		"paths": {
			"playwright-core/types/protocol": [
				"../../node_modules/playwright-core/types/protocol.d.ts"
			]
		}
	},
	"exclude": [
		"node_modules",
		"out",
		"tools"
	]
}
