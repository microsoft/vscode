{
	"compilerOptions": {
		"module": "ES2022",
		"moduleResolution": "bundler",
		"noImplicitAny": true,
		"removeComments": false,
		"preserveConstEnums": true,
		"target": "es2024",
		"strict": true,
		"noUnusedParameters": false,
		"noUnusedLocals": true,
		"outDir": "out",
		"sourceMap": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"lib": [
			"esnext", // for #201187
			"dom"
		]
	},
	"exclude": [
		"node_modules"
	]
}
