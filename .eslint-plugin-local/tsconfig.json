{
	"compilerOptions": {
		"target": "es2024",
		"lib": [
			"ES2024"
		],
		"rootDir": ".",
		"module": "esnext",
		"allowImportingTsExtensions": true,
		"erasableSyntaxOnly": true,
		"noEmit": true,
		"strict": true,
		"exactOptionalPropertyTypes": false,
		"useUnknownInCatchVariables": false,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"newLine": "lf",
		"typeRoots": [
			"."
		]
	},
	"include": [
		"./**/*.ts",
	],
	"exclude": [
		"node_modules/**",
		"./tests/**"
	]
}
