{
  "name": "vs-code-codereview",
  "displayName": "VS Code Codereview",
  "description": "View the Slack code review channel messages directly in VS Code",
  "version": "0.0.1",
  "publisher": "vs-code-codereview",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/microsoft/vscode.git"
  },
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.106.1"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onUri"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vs-code-codereview.refreshMessages",
        "title": "Refresh Messages",
        "icon": "$(refresh)"
      },
      {
        "command": "vs-code-codereview.signIn",
        "title": "Sign in to Slack",
        "icon": "$(sign-in)"
      },
      {
        "command": "vs-code-codereview.viewPR",
        "title": "Open PR Locally",
        "icon": "$(link-external)"
      },
      {
        "command": "vs-code-codereview.openPRInBrowser",
        "title": "Open PR in Browser",
        "icon": "$(globe)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "codereview-sidebar",
          "title": "Code Review",
          "icon": "$(check-all)"
        }
      ]
    },
    "views": {
      "codereview-sidebar": [
        {
          "id": "codereview-slack-messages",
          "name": "Slack Messages",
          "icon": "$(comment-discussion)",
          "contextualTitle": "Code Review Channel"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "vs-code-codereview.refreshMessages",
          "when": "view == codereview-slack-messages",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "vs-code-codereview.viewPR",
          "when": "view == codereview-slack-messages && viewItem == slackMessageWithPr",
          "group": "inline@1"
        },
        {
          "command": "vs-code-codereview.openPRInBrowser",
          "when": "view == codereview-slack-messages && viewItem == slackMessageWithPr",
          "group": "inline@2"
        }
      ]
    }
  },
  "scripts": {
    "compile": "gulp compile-extension:vscode-codereview-slack-integration",
    "watch": "gulp watch-extension:vscode-codereview-slack-integration",
    "compile-local": "node esbuild.mjs"
  },
  "devDependencies": {
    "@types/node": "22.x",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@slack/web-api": "^7.13.0"
  }
}
