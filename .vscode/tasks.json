{
	"version": "0.1.0",
	"windows": {
		"command": ".\\node_modules\\.bin\\gulp"
	},
	"osx": {
		"command": "./node_modules/.bin/gulp"
	},
	"linux": {
		"command": "./node_modules/.bin/gulp"
	},
	"isShellCommand": true,
	"tasks": [
		{
			"taskName": "watch",
			"args": [
				"--no-color"
			],
			"isBuildCommand": true,
			"isWatching": true,
			"problemMatcher": {
				"owner": "typescript",
				"fileLocation": [
					"absolute"
				],
				"pattern": {
					"regexp": "^\\*\\*\\* Error: ([^(]+)\\((\\d+|\\d+,\\d+|\\d+,\\d+,\\d+,\\d+)\\): (.*)$",
					"file": 1,
					"location": 2,
					"message": 3
				},
				"watching": {
					"beginsPattern": "^\\*\\*\\* Starting\\.\\.\\.$",
					"endsPattern": "^\\*\\*\\* Finished"
				}
			}
		},
		{
			"taskName": "tslint",
			"args": [],
			"problemMatcher": {
				"owner": "tslint",
				"fileLocation": [
					"relative",
					"${workspaceRoot}"
				],
				"severity": "warning",
				"pattern": {
					"regexp": "^\\[tslint\\] (.*):(\\d+):(\\d+):\\s+(.*)$",
					"file": 1,
					"line": 2,
					"column": 3,
					"message": 4
				}
			}
		},
		{
			"taskName": "test",
			"args": [
				"--no-color"
			],
			"showOutput": "always",
			"isTestCommand": true
		}
	]
}